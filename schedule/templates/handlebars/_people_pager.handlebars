{{#if meta}}
<ul class="pager">
    {{#if meta.has_prev}}
        <li class="previous">{{#link-to 'people_page' meta.prev_num}}Previous{{/link-to}}</li>
    {{else}}
        <li class="previous disabled">{{#link-to 'people_page' meta.prev_num}}Previous{{/link-to}}</li>
    {{/if}}
    </li>
    <li>Page {{meta.page}} of {{meta.total}}</li>
    {{#if meta.has_next}}
        <li class="next">{{#link-to 'people_page' meta.next_num}}Next{{/link-to}}</li>
    {{else}}
        <li class="next disabled">{{#link-to 'people_page' meta.next_num}}Next{{/link-to}}</li>
    {{/if}}
    </li>
</ul>
{{/if}}
